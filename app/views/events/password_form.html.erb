<%= form_tag('', method: 'post') do |f| %>
  <div class="form-group">
    <section class="container-fluid">
      <section class="row justify-content-center">
        <section class="col-sm-12 col-md-8 col-lg-7 col-xl-6">
          <main class="form-container mt-5 mb-5">
            <h1 class="text-center">Доступ только по пин-коду</h1>
            <div class="form-group">
              <%= label :pincode, t('activerecord.attributes.event.pincode') %>
              <%= text_field_tag :pincode, params[:pincode], class: 'form-control',  placeholder: t('activerecord.attributes.pincode.plas')%>
            </div>
            <div class="actions">
              <%= submit_tag t('activerecord.attributes.pincode.submit'), class: 'btn btn-warning' %>
              <%= link_to 'На главную', events_path %>
            </div>
          </main>
        </section>
      </section>
    </section>
  </div>
<% end %>