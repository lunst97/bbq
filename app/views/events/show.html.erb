<div class="event">
  <div class="event-info row">
    <div class="col-md-12">
      <%= content_tag 'div', '', class: 'event-background',
                      style: "background-image: url(#{asset_pack_path('media/images/event.jpg')})" %>

      <div class="event-info-inner row">
        <div class="col-md-6">
          <div class="event-description">
            <h1 class="mt-3 mb-3"><%= @event.title %></h1>
            <h3 class=""><%= l @event.datetime, format: :long %></h3>
            <h3><small><%= link_to @event.address,
                                   "https://yandex.ru/maps/?text=#{@event.address}" %></small></h3>
            <div class="mt-3 mb-3"><%= @event.description %></div>
          </div>
          <% if current_user_can_edit?(@event) %>
            <div class="buffer-top">
              <%= link_to 'Изменить', edit_event_path(@event), class: 'btn btn-primary mt-4 mb-4' %>
              <%= link_to 'Удалить событие', @event, method: :delete, class: 'btn btn-danger', data: {confirm: t('activerecord.attributes.event.confirmation')}%>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
