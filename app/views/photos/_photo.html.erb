<% delete =
     link_to(
       content_tag('span', fa_icon('trash')),
       event_photo_path(photo.event, photo),
       method: :delete,
       data: { confirm: t('photo.sure') })
%>

<% title =
     "#{t('photo.added')} #{render partial: 'users/user', object: photo.user}"
%>

<% title << delete if current_user_can_edit?(photo)%>

<%= link_to image_tag(photo.photo.thumb.url), photo.photo.url,
            data: {
              toggle: 'lightbox',
              title: title,
              gallery: 'example-gallery',
            }
%>