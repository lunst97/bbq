<!DOCTYPE html>
<html>
  <head>
    <title>Bbq</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta charset="utf-8">
    <%= csrf_meta_tag %>
    <%= csp_meta_tag %>
    <%= stylesheet_pack_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>

  </head>

  <body>
  <nav class="navbar navbar-light bg-light">
    <div class="container">
      <%= link_to root_path, class: 'navbar-brand' do %>
        <%= image_tag asset_pack_path('media/images/bbq-grill.png'), class: 'icon-bool'%> Шашлыки
      <% end %>
      <div class="navbar navbar-expand-lg ">
        <ul class="nav navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item mr-3">
              <%= link_to 'Профиль', current_user, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Выйти', destroy_user_session_path, method: :delete, class: "nav-link" %>
            </li>
          <% else %>
            <li class="nav-item mr-3">
              <%= link_to 'Войти', new_user_session_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Зарегистрироваться', new_user_registration_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <%= render 'partials/alerts' %>

        <%= yield %>
      </div>
      <div class="col-lg-3">
      </div><!--/span-->
    </div><!--/row-->

    <footer class="blockquote-footer">
      <p>&copy; <%= t 'app.company' %></p>
    </footer>

  </div> <!-- /container -->
  </body>
</html>
