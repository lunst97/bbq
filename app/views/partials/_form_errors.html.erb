<% errors = model.errors %>

<% if errors.any? %>
  <div id="alert alert-danger">
    <div class="lead buffer-bottom">
      В вашей форме <%= I18n.t :mistake,
                               count: resource.errors.count,
                               resource: resource.class.model_name.human.downcase
                    %>
    </div>

    <ul>
      <% errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>