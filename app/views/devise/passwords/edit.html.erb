<main class="col-md-6">
  <div class="form-group">
    <h2 class="text-center">Изменение пароля</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>
      <div class="form-group">
        <label for="exampleInputPassword1">Пароль</label>
        <% if @minimum_password_length %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "Пароль (минимум #{@minimum_password_length} символов", class: 'form-control my-input' %>
        <% else %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "Пароль", class: 'form-control my-input' %>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Подтверждение пароля', class: 'form-control my-input' %>
      </div>
      <div class="actions text-center">
        <%= f.submit "Изменить пароль", class: 'btn btn-warning m-1'%>
      </div>
      <div class="col-md-12 ">
        <div class="login-or">
          <hr class="hr-or">
          <span class="span-or">или</span>
        </div>
      </div>
      <div class="mt-4 mb-4 text-center">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</main>


