<%= errors = model.errors %>

<% if errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show">
    <button type="button" class="close" data-dismiss="alert">
      x
    </button>
    <div id="error_explanation">
      <h2>
        <%= I18n.t('error.from_error',
            count: errors.count)
        %>
      </h2>
      <ul>
        <% errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>