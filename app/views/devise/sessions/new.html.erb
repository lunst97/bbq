<div class="container">
  <div class="row">
    <div class="col-lg-5 col-md-6">
      <h1 class="text-center">Войти</h1>
        <div class="myform form">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="form-group">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Email', class: 'form-control my-input' %>
            </div>
            <div class="form-group">
              <%= f.password_field :password, autocomplete: "current-password", placeholder: 'Пароль', class: 'form-control my-input' %>
            </div>
            <% if devise_mapping.rememberable? %>
              <div class="form-group">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me, 'Запомнить меня' %>
              </div>
            <% end %>
            <div class="actions ">
              <%= f.submit "Войти", class: 'btn btn-primary m-1' %>
            </div>
          <% end %>
          <%= render "devise/shared/links" %>
        </div>
    </div>
  </div>
</div>
